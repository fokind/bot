<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="candleImportDialog" title="Candle Import">
        <content>
            <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="Currency"/>
                    <Input value="{/currency}"/>
                    <Label text="Asset"/>
                    <Input value="{/asset}"/>
                    <Label text="Period"/>
                    <Input value="{/period}"/>
                    <Label text="Range"/>
                    <Input value="{/period}"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="OK" press=".onOkPress"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
