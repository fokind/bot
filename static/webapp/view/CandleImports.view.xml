<mvc:View controllerName="fokind.bot.controller.CandleImports"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.ui.table"
    xmlns:m="sap.m">
    <m:Page title="Candle Imports"
        showNavButton="true"
        navButtonPress="onBackPress"
        showHeader="true">
        <m:headerContent>
            <m:Button icon="sap-icon://add" text="Add" press="onAddPress"/>
        </m:headerContent>
        <m:content>
            <Table id="candleImportsTable"
                rows="{/CandleImports}"
                title="Candle Imports"
                selectionMode="Single"
                selectionBehavior="RowOnly"
                visibleRowCountMode="Auto">
                <columns>
                    <Column>
                        <m:Label text="Currency" />
                        <template>
                            <m:Text text="{currency}" wrapping="false"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Asset" />
                        <template>
                            <m:Text text="{asset}" wrapping="false"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Period" />
                        <template>
                            <m:Text text="{period}" wrapping="false"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Begin" />
                        <template>
                            <m:Text text="{begin}" wrapping="false"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="End" />
                        <template>
                            <m:Text text="{end}" wrapping="false"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Candles" />
                        <template>
                            <m:Text text="{candlesCount}" wrapping="false"/>
                        </template>
                    </Column>
                </columns>
            </Table>
        </m:content>
    </m:Page>
</mvc:View>
