<mvc:View controllerName="fokind.bot.controller.CandleImports"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page title="Candle Imports" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="candleImportsTable" items="{data>/CandleImports}" growingThreshold="100" inset="false">
                <headerToolbar>
                    <Toolbar>
                        <content>
                            <Title text="Candle Imports"/>
                            <ToolbarSpacer/>
                            <Button icon="sap-icon://add" press=".onAddPress"/>
                        </content>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Symbol"/>
                    </Column>
                    <Column>
                        <Text text="Period"/>
                    </Column>
                    <Column>
                        <Text text="Begin"/>
                    </Column>
                    <Column>
                        <Text text="End"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{data>asset}{data>currency}"/>
                            <Text text="{data>period}"/>
                            <Text text="{data>begin}"/>
                            <Text text="{data>end}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
