<mvc:View controllerName="fokind.bot.controller.Backtests"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.ui.table"
	xmlns:m="sap.m">
	<m:Page title="Backtests" showNavButton="true" navButtonPress="onBackPress">
        <m:headerContent>
            <m:Button icon="sap-icon://add" text="Add" press="onAddPress"/>
        </m:headerContent>
		<m:content>
			<Table id="backtests"
				rows="{/Backtests}"
				title="Backtest"
				selectionMode="Single"
				selectionBehavior="RowOnly"
				visibleRowCountMode="Auto"
				rowSelectionChange="onRowSelectionChange">
				<columns>
					<Column>
						<m:Label text="Currency" />
						<template>
							<m:Text text="{currency}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Asset" />
						<template>
							<m:Text text="{asset}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Period" />
						<template>
							<m:Text text="{period}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Begin" />
						<template>
							<m:Text text="{begin}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="End" />
						<template>
							<m:Text text="{end}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Strategy" />
						<template>
							<m:Text text="{strategyName}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Stoploss" />
						<template>
							<m:Text text="{stoplossLevel}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Fee" />
						<template>
							<m:Text text="{fee}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Initial Balance" />
						<template>
							<m:Text text="{initialBalance}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Final Balance" />
						<template>
							<m:Text text="{finalBalance}" wrapping="false"/>
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>
